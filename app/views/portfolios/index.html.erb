<h1>Porfolio Items</h1>

<%= link_to "Create New Item", new_portfolio_path %>



<% @portfolio_items.each do |portfolio_item| %> 
	<h2><%= portfolio_item.title %></h2>
	<h3><%= portfolio_item.subtitle %></h3>
	<p><%= portfolio_item.body %></p>
	<%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil? %>
	<p><%= link_to "Edit", edit_portfolio_path(portfolio_item.id) %></p>
	<p><%= link_to "Delete Item", portfolio_item, method: :delete, data: {confirm: 'Are you sure ? '} %></p>
<% end %>